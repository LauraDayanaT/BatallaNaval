    <children>
        <!-- Tablero jugador -->
        <GridPane fx:id="tableroJugador" gridLinesVisible="true" layoutX="20" layoutY="20" />

        <!-- Panel lateral de barcos -->
        <VBox fx:id="panelBarcos" layoutX="350" layoutY="20" spacing="10" />

        <!-- Tablero oponente -->
        <GridPane fx:id="tableroOponente" gridLinesVisible="true" layoutX="20" layoutY="350" />

        <!-- BotÃ³n iniciar juego -->
        <Button fx:id="btnIniciar" layoutX="350" layoutY="300" text="Iniciar juego" />
    </children>
